scope: {{ patroni_scope }}
name: {{ inventory_hostname }}

restapi:
  listen: 0.0.0.0:{{ patroni_api_port }}
  connect_address: {{ ansible_host }}:{{ patroni_api_port }}
  certfile: /etc/patroni/certs/patroni.crt
  keyfile: /etc/patroni/certs/patroni.key
  cafile: /etc/patroni/certs/root.crt
  verify_client: false
  verify_server: false

etcd:
  hosts: {% for host in groups['promoters'] %}{{ hostvars[host]['ansible_host'] }}:{{ etcd_client_port }}{% if not loop.last %},{% endif %}{% endfor %}

bootstrap:
  dcs:
    ttl: {{ patroni_ttl }}
    loop_wait: {{ patroni_loop_wait }}
    retry_timeout: {{ patroni_retry_timeout }}
    maximum_lag_on_failover: {{ patroni_max_lag }}
    postgresql:
      use_pg_rewind: {{ patroni_use_pg_rewind | lower }}
      use_slots: {{ patroni_use_slots | lower }}
  initdb:
    - encoding: {{ postgresql_encoding }}
    - data-checksums
  users:
    postgres:
      password: {{ postgresql_superuser_password }}
      options:
        - superuser
        - createdb
    pma_user:
      password: {{ postgresql_pma_user_password }}
      options:
        - superuser

postgresql:
  listen: 0.0.0.0:{{ postgresql_port }}
  connect_address: {{ ansible_host }}:{{ postgresql_port }}
  data_dir: {{ postgresql_data_dir }}
  bin_dir: {{ postgresql_bin_dir }}
  authentication:
    superuser:
      username: {{ postgresql_superuser_name }}
      password: {{ postgresql_superuser_password }}
    replication:
      username: {{ postgresql_replication_user }}
      password: {{ postgresql_replication_password }}
  parameters:
    max_connections: {{ postgresql_max_connections }}
    shared_buffers: {{ postgresql_shared_buffers }}
    wal_level: {{ postgresql_wal_level }}
    hot_standby: "on"
    shared_preload_libraries: {{ postgresql_shared_preload_libraries }}
    ssl: 'on'
    ssl_cert_file: 'certs/server.crt'
    ssl_key_file: 'certs/server.key'
    ssl_ca_file: 'certs/root.crt'
    ssl_crl_file: ''
    ssl_prefer_server_ciphers: '{{ postgresql_ssl_prefer_server_ciphers }}'
    ssl_min_protocol_version: '{{ postgresql_ssl_min_protocol }}'
{% if postgresql_custom_parameters is defined %}
{% for param, value in postgresql_custom_parameters.items() %}
    {{ param }}: {{ value }}
{% endfor %}
{% endif %}
  create_replica_methods:
    - basebackup
  basebackup:
    max-rate: 100M
    checkpoint: fast
  pg_hba:
    - local all all  trust
    - hostssl all postgres 127.0.0.1/32 md5
    - hostssl all postgres 0.0.0.0/32 md5
    - host postgres {{ postgresql_superuser_name }} {{ ansible_host }}/32 trust
    - hostssl postgres pma_user {{ ansible_host }}/32 md5
    - hostssl replication {{ postgresql_replication_user }} 127.0.0.1/32 {{ postgresql_replication_auth_method }}
{% for host in groups['promoters'] %}
    - hostssl replication {{ postgresql_replication_user }} {{ hostvars[host]['ansible_host'] }}/32 {{ postgresql_replication_auth_method }}
    - hostssl all {{ postgresql_superuser_name }} {{ hostvars[host]['ansible_host'] }}/32 md5
{% endfor %}
{% if postgresql_additional_pg_hba is defined %}
{% for rule in postgresql_additional_pg_hba %}
    - {{ rule }}
{% endfor %}
{% endif %} 